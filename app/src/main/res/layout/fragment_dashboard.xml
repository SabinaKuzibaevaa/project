    <RelativeLayout
        android:id="@+id/container_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/container_level"
        android:background="@drawable/relative_layout"
        app:backgroundTint="@null">


        <TextView
            android:id="@+id/text_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Friends"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/info_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_friends"
            android:fontFamily="sans-serif"
            android:text="Connect and walk togerther."
            android:textColor="@color/grey"
            android:textSize="15dp" />

        <Button
            android:id="@+id/find_friends"
            style="@style/button_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_connect"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Find friends"
            android:textColor="@color/white"
            android:textSize="13dp" />

