    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_jungle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/container_friends"
        android:background="@drawable/relative_layout"
        app:backgroundTint="@null">


        <TextView
            android:id="@+id/text_jungle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Jungle,March"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/total_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_jungle"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Total steps"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_steps"
            android:fontFamily="sans-serif"
            android:text="11605"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30dp" />

